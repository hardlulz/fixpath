{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "declares": [
        {
            "name": "make-compile",
            "owner": "cpp",
            "fileLocation": "absolute",
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        }
    ],
    "tasks": [
        {
            "taskName": "> make",
            "command": "bash",
            "windows": {
                "args": ["-c", "cd build_win; make -j4 -w 2>&1 | fixpath -xd"]
            },
            "linux": {
                "args": ["-c", "cd build; make -j4 -w 2>&1 | fixpath -xd"]
            },
            "osx": {
                "args": ["-c", "cd build_mac; make -j4 -w 2>&1 | fixpath -xd"]
            },
            "isBuildCommand": true,
            "problemMatcher": "$make-compile"
        },
        {
            "taskName": "clean",
            "command": "bash",
            "windows": {
                "args": ["-c", "cd build_win; make clean"]
            },
            "linux": {
                "args": ["-c", "cd build; make clean"]
            },
            "osx": {
                "args": ["-c", "cd build_mac; make clean"]
            }
        },
        {
            "taskName": "configure",
            "command": "bash",
            "windows": {
                "args": ["-c", 
                "rm -rf build_win; mkdir build_win; cd build_win; ../configure"
                ]
            },
            "linux": {
                "args": ["-c", 
                "rm -rf build; mkdir build; cd build; ../configure"
                ]
            },
            "osx": {
                "args": ["-c", 
                "rm -rf build_mac; mkdir build_mac; cd build_mac; ../configure"
                ]
            }
        },
        {
            "taskName": "configure clang++",
            "command": "bash",
            "windows": {
                "args": ["-c", 
                "rm -rf build_win; mkdir build_win; cd build_win; ../configure CXX=clang++"
                ]
            },
            "linux": {
                "args": ["-c", 
                "rm -rf build; mkdir build; cd build; ../configure CXX=clang++"
                ]
            },
            "osx": {
                "args": ["-c", 
                "rm -rf build_mac; mkdir build_mac; cd build_mac; ../configure CXX=clang++"
                ]
            }
        }
    ]
}